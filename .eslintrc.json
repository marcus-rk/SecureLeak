{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "ignorePatterns": ["venv/**", "**/vendor/**"],
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }],
    "no-undef": "error",
    "no-var": "warn",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "smart"]
  }
}
